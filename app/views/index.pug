extends esquema

block content
        h1.titulo-productos-destacados
          | Productos Destacados
        ul.products
          each pro in productos
            li
              a(href="/producto/"+pro.id)
                img(src="/img/"+pro.img)
              h2
                a(href="/producto/"+pro.id)= pro.name
              p= pro.description
              a.btn-buy(href="#")
                i.glyphicon.glyphicon-shopping-cart(aria-hidden="true")
                | Add to cart